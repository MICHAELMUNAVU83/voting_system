<h1>Listing votes</h1>

<table>
  <tr>
    <th>Contestant</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @votes.each do |vote| %>
  <tr>
    <td><%= vote.contestant %></td>
    <td><%= vote.user %></td>
    <td><%= link_to 'Show', [vote.contestant, vote] %></td>
    <td><%= link_to 'Edit', edit_contestant_vote_path(vote.contestant, vote) %></td>
    <td><%= link_to 'Destroy', [vote.contestant, vote], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Vote', new_contestant_vote_path(params[:contestant_id]) %>
