<p style="color: green"><%= notice %></p>

<h1>Contestants</h1>

<div id="contestants" class="d-flex justify-content-around">
  <% @contestants.each do |contestant| %>
    <div> 
    <figure class="snip1390">
          
           <%= image_tag contestant.avatar , class: "profile" %>
      <figcaption>
         <h2><%= contestant.name %></h2>
        <blockquote>Votes : <%= contestant.number_of_votes %></blockquote>
      </figcaption>
      <%= link_to "Vote for this contestant", new_contestant_vote_path(contestant) , class: "btn btn-success my-3" %> 
 
    </figure>

  

       
        
        <%= link_to "Show this contestant", contestant %>
     
   </div>

  
  <% end %>

  
          
</div>
<%if can? :create, Contestant%>
  <p>
    <%= link_to "New Contestant", new_contestant_path %>
  </p>
<%end%>

